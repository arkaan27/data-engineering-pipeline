name: uploading_data
conda_env: conda.yml

entry_points:
  main:
    parameters:

      output_artifact:
        description: Name for the W&B artifact that will be created
        type: string
        default: raw_data

      output_type:
        description: Type of the artifact to create
        type: string
        default: data_upload

      output_description:
        description: Artifact for data storage
        type: string

      directory_path:
        description: the url of the directory to download
        type: uri
        default: https://github.com/arkaan27/data-engineering-pipeline.git#data

    command: >-
        python run.py --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --directory_path {directory_path}