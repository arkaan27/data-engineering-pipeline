name: database_upload
conda_env: conda.yml

entry_points:
  main:
    parameters:

      AWS_ACCESS_KEY_ID:
        description: Your AWS ACCESS KEY ID
        type: string

      AWS_SECRET_ACCESS_KEY:
        description: Your AWS SECRET ACCESS KEY
        type: string

      MONGO_Username:
        description: Your Mongo DB Username
        type: string

      MONGO_Password:
        description: Your Mongo DB password
        type: string

      MONGO_Cluster_name:
        description: Your Cluster name of the Mongo DB database for connection
        type: string

      Database_name:
        description: Your database name to create/update on MongoDB
        type: string
        default: FHIR-data

      input_artifact:
        description: Fully qualified name for the artifact
        type: string
        default: processed_data:latest

      output_artifact:
        description: Name for the W&B artifact that will be created
        type: string
        default: database_upload

      output_type:
        description: Type of the artifact to create
        type: string
        default: database_upload

      output_description:
        description: Description of the Artifact for reference
        type: string

    command: >-
        python run.py --AWS_ACCESS_KEY_ID {AWS_ACCESS_KEY_ID} \
                      --AWS_SECRET_ACCESS_KEY {AWS_SECRET_ACCESS_KEY} \
                      --MONGO_Username {MONGO_Username} \
                      --MONGO_Password {MONGO_Password} \
                      --MONGO_Cluster_name {MONGO_Cluster_name} \
                      --Database_name {Database_name} \
                      --input_artifact {input_artifact} \
                      --output_artifact {output_artifact} \
                      --output_type {output_type} \
                      --output_description {output_description}